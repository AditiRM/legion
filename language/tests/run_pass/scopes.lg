import "legion"

x = 1
y = 2

task f(y : int)
  assert(x == 1 and y == 20)
  var x = 10
  assert(x == 10)
  do
    x = 100
    assert(x == 100)

    var y = 200
    assert(y == 200)

    if true then
      var y = 2000
      assert(y == 2000)
    end
    assert(y == 200)

    while true do
      var y = 2000
      assert(y == 2000)
      break
    end
    assert(y == 200)

    for y = 2000, 2001 do
      assert(y == 2000)
      var y = 20000
      assert(y == 20000)
    end
    assert(y == 200)

    repeat
      var y = 2000
      assert(y == 2000)
    until true
    assert(y == 200)

  end
  assert(x == 100 and y == 20)
end

task main()
  f(20)
end
legionlib.start(main)
